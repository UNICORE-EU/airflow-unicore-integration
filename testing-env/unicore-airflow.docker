FROM apache/airflow:3.1.1
USER airflow

ENV SQLALCHEMY_SILENCE_UBER_WARNING=1

RUN pip --version && python -m pip install --upgrade pip
RUN pip install pyunicore

ADD /dist/airflow_unicore_integration-0.1.13-py3-none-any.whl /airflow_unicore_integration-0.1.13-py3-none-any.whl
RUN pip install /airflow_unicore_integration-0.1.13-py3-none-any.whl apache-airflow==3.1.1 apache-airflow-providers-edge3 apache-airflow-task-sdk==1.1.1 apache-airflow-providers-git==0.0.9
